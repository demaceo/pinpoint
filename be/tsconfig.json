{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "*.ts",
    "routes/**/*.ts",
    "controllers/**/*.ts",
    "services/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
